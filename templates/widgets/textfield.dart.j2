Container(
  width: {{ width }},
  height: {{ height }},
  child: TextField(
    controller: _textControllers['{{ widget_id }}'],
    decoration: InputDecoration(
      hintText: '{{ placeholder }}',
      hintStyle: TextStyle(fontSize: 16.0),
      border: OutlineInputBorder(
        borderRadius: BorderRadius.circular({{ border_radius_px }}),
        borderSide: BorderSide(color: {{ border_color }}),
      ),
      enabledBorder: OutlineInputBorder(
        borderRadius: BorderRadius.circular({{ border_radius_px }}),
        borderSide: BorderSide(color: {{ border_color }}),
      ),
      focusedBorder: OutlineInputBorder(
        borderRadius: BorderRadius.circular({{ border_radius_px }}),
        borderSide: BorderSide(color: {{ border_color }}, width: 2.0),
      ),
      contentPadding: EdgeInsets.all(12.0),
    ),
    style: TextStyle(fontSize: 16.0),
    onChanged: (value) {
      // Callback cuando el texto cambia
      print('TextField {{ widget_id }} changed: $value');
    },
  ),
)
